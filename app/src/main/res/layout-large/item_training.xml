<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_accent"
    android:orientation="vertical">

    <com.ramotion.foldingcell.FoldingCell
        android:id="@+id/foldingCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/min_spacing"
        folding-cell:additionalFlipsCount="2"
        folding-cell:animationDuration="1000"
        folding-cell:backSideColor="@color/colorGreySemiDark"
        folding-cell:cameraHeight="30">

        <!-- content -->
        <include layout="@layout/item_training_content" />

        <!-- title -->
        <include layout="@layout/item_training_title" />


    </com.ramotion.foldingcell.FoldingCell>

    <!-- divider line -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_width"
        android:layout_marginTop="@dimen/min_spacing"
        android:src="@color/colorGreyMedium" />

</LinearLayout>